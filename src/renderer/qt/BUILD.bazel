load(
    "//:build_defs.bzl",
    "cc_library_mozc",
)
load(
    "//tools/build_defs:qt.bzl",
    "cc_qt_library_mozc",
)

package(default_visibility = ["//:__subpackages__"])

cc_library_mozc(
    name = "qt_renderer_lib",
    srcs = [
        "qt_renderer.cc",
    ],
    hdrs = [
        "qt_renderer.h",
    ],
    deps = [
        ":qt_window_manager_interface",
        "//base:logging",
        "//base:port",
        "//client:client_interface",
        "//protocol:renderer_proto",
        "//renderer:renderer_interface",
    ],
)

cc_qt_library_mozc(
    name = "qt_server",
    srcs = [
        "qt_server.cc",
    ],
    hdrs = [
        "qt_server.h",
    ],
    deps = [
        ":qt_window_manager_interface",
        "//base:logging",
        "//base:port",
        "//base:thread",
        "//client:client_interface",
        "//protocol:renderer_proto",
        "//renderer:renderer_interface",
        "//renderer:renderer_server",
        "@com_google_absl//absl/synchronization",
    ],
)

cc_library_mozc(
    name = "qt_window_manager_interface",
    hdrs = [
        "qt_window_manager_interface.h",
    ],
)

cc_qt_library_mozc(
    name = "qt_window_manager",
    srcs = [
        "qt_window_manager.cc",
    ],
    hdrs = [
        "qt_window_manager.h",
    ],
    deps = [
        ":qt_window_manager_interface",
        "//base:coordinates",
        "//base:logging",
        "//base:port",
        "//client:client_interface",
        "//protocol:candidates_proto",
        "//protocol:renderer_proto",
        "//renderer:renderer_style_handler",
        "//renderer:window_util",
        "@com_google_absl//absl/strings",
    ],
)
